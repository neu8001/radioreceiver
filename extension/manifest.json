{
  "name": "Radio Receiver",
  "description": "Receive and listen to FM and AM radio broadcasts on your browser or ChromeBook using an RTL2832U-based USB digital TV tuner.",
  "version": "1.1.3",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "app": {
    "background": {
      "scripts": ["main.js"]
    }
  },
  "permissions": [
    "storage",
    "usb",
    {"fileSystem": ["write"]}
  ],
  "optional_permissions": [
    {
      "usbDevices": [
        {
          "vendorId": 3034,
          "productId": 10290
        },
        {
          "vendorId": 0bda,
          "productId": 2832
        }
      ]
    }
  ]
}
